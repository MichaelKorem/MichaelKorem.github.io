			<main>
				<h1>Order Event Tickets</h1>
				<!-- The form starts here... -->
				<form name="order_form" action="place_order.html" method="post">
					<fieldset> <!-- Member Information-->
						<legend>Member Information</legend>
						<label for="email">E-mail:</label>
						<input type="email" id="email" class="req" name="email" autofocus required><br><br>
						<label for="fname">First Name:</label>
						<input type="text" id="fname" class="req" name="fname" required><br><br>
						<label for="lname">Last Name:</label>
						<input type="text" id="lname" class="req" name="lname" required><br><br>
						<label for="address">Address:</label>
						<input type="text" id="address" name="address"><br><br>
						<label for="city">City:</label>
						<input type="text" id="city" class="req" name="city" required><br><br>
						<label for="prov">Province:</label>
						<input type="text" id="prov" class="req" name="prov" pattern="[A-Za-z]{2}" placeholder="2-character code" title="Type a 2-character code" required><br><br>
						<label for="pcode">Postal Code:</label>
						<input type="text" id="pcode" class="req" name="pcode" pattern="[A-Za-z0-9]{6}" placeholder="6 characters" title="Type a 6-character code" required><br><br>
						<label for="phone">Phone Number:</label>
						<input type="tel" id="phone" pattern="\d{3}[\-]\d{3}[\-]\d{4}" placeholder="999-999-9999" title="Type a number according to the pattern"><br><br>
					</fieldset>
					<fieldset> <!-- Ordering Information-->
						<legend>Ordering Information</legend>
						<label for="event">Event:</label>
						<select name="events" id="events">
							<option value="cookiedecor">Cookie Decoration Contest</option>
							<option value="treedecor">Tree Decoration Contest</option>
							<option value="ridealong">Gift of Light Ride-Along</option>
							<option value="santa">Breakfast with Santa</option>
						</select><br><br>
						<label for="order">Order Type:</label>
						<select name="orders" id="orders">
							<option value="member">Member Package</option>
							<option value="donor">Donor Package</option>
							<option value="single">Single Tickets</option>
						</select><br><br>
						<label for="tickets">Number of Tickets:</label>
						<input type="number" name="tickets" placeholder="Number of single tickets" title="Type a number"><br><br>
					</fieldset>
					<fieldset id="payment_method"> <!-- Payment Method-->
						<legend>Payment Method</legend>
						<input type="radio" id="bill" name="payment" value="bill">
  						<label for="bill">Bill Me</label>
 						<input type="radio" id="credit" name="payment" value="credit">
 						<label for="credit">Credit Card</label>
					</fieldset>
					<fieldset> <!-- Credit Card Information-->
						<legend>Credit Card Information</legend>
						<label for="cardt">Card Type:</label>
						<select name="cards" id="cards">
							<option value="visa">Visa</option>
							<option value="mc">Master Card</option>
							<option value="discover">Discover</option>
						</select><br><br>
						<label for="cardn">Card Number:</label>
						<input type="text" class="req" name="cardn" pattern="^\d{4}-\d{4}-\d{4}-\d{4}$" title="Type a 16 digit number" placeholder="16 digits" required><br><br>
						<label for="expir">Expiration Date:</label>
						<select name="months" id="months">
							<option value="jan">January</option>
							<option value="feb">February</option>
							<option value="mar">March</option>
							<option value="apr">April</option>
							<option value="may">May</option>
							<option value="jun">June</option>
							<option value="jul">July</option>
							<option value="aug">August</option>
							<option value="sep">September</option>
							<option value="oct">October</option>
							<option value="nov">November</option>
							<option value="dec">December</option>
						</select>
						<select name="years" id="years">
							<option value="21">2021</option>
							<option value="22">2022</option>
							<option value="23">2023</option>
							<option value="24">2024</option>
							<option value="25">2025</option>
							<option value="26">2026</option>
							<option value="27">2027</option>
						</select><br><br>
					</fieldset>
					<fieldset> <!-- Order Submit-->
						<legend>Submit Your Order</legend>
						<input type="submit" value="Submit">
						<input type="reset" value="Reset Fields">
					</fieldset>
				</form>
			</main>
			
